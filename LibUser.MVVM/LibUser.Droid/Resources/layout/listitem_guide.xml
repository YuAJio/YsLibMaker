<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#FF8C8C8C"
        android:background="@drawable/pres_guidemenu_background"
        android:textSize="@dimen/TextSize_GuideMenuMenuTitle"
        android:paddingTop="@dimen/ViewPadding_GuideMenuTopAndBottom"
        android:paddingBottom="@dimen/ViewPadding_GuideMenuTopAndBottom"
        android:gravity="center"
        local:MvxBind="Text MenuName"
        android:minHeight="@dimen/ViewHeight_GuideMenuButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
